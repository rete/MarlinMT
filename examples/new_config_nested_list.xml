

<marlin>
  
  <!-- Algorithm scheduling -->
  <scheduler type="PEPScheduler">
    <property name="NWorkers"> 10 </property>
  </scheduler>
  
  <!-- Logging component -->
  <logging>
    <property name="Verbosity"> DEBUG </property>
    <property name="ColoredConsole"> true </property>
    <property name="LogFileName"> marlin.log </property>
  </logging>
  
  <!-- Geometry (none) -->
  <geometry type="EmptyGeometry"/>
  
  <!-- Input data source. In this case LCIO -->
  <datasource type="LCIO">
    <parameter name="LCIOInputFiles"> test/testmarlin/simjob.slcio </parameter>
    <parameter name="MaxRecordNumber" value="0"/>
    <parameter name="SkipNEvents" value="0"/>
  </datasource>
  
  <!-- Properties and algorithm order are defined in the same place (no execute section) -->
  <algorithms>
    <!-- Declare an algorithm without name -->
    <!-- The name is optional ! -->
    <algorithm type="ParentAlgo">
      <algorithms name="AlgorithmList">
        <algorithm type="DaughterAlgo">
          <output type="Track" name="OutputCollection"> RandomTracks1 </property>
          <property name="NElements"> 150 </property>
        </algorithm>
        <algorithm type="DaughterAlgo">
          <output type="Track" name="OutputCollection"> RandomTracks2 </property>
          <property name="NElements"> 250 </property>
        </algorithm>
      </algorithms>
      <property name="WeightCut"> 0.01 </property>
    </algorithm>
  </algorithms>
  
</marlin>

